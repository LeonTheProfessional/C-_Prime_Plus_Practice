#include<iostream>
int main(void)
{
	using namespace std;
	const int DA_TO_HU(24);
	const int HU_TO_MI(60);
	const int MI_TO_SE(60);
	cout << "Enter the number of seconds: ";
	long seconds;
	int days,hours,minutes;
	cin >> seconds;
	cout << seconds << " seconds = ";
	days = seconds / MI_TO_SE / HU_TO_MI / DA_TO_HU;
	hours = seconds % (days*DA_TO_HU*HU_TO_MI*MI_TO_SE) / MI_TO_SE / HU_TO_MI;
	minutes = seconds % (days*DA_TO_HU*HU_TO_MI*MI_TO_SE + hours * MI_TO_SE*HU_TO_MI)/MI_TO_SE;
	seconds = seconds % (days*DA_TO_HU*HU_TO_MI*MI_TO_SE + hours * MI_TO_SE*HU_TO_MI + minutes * MI_TO_SE);
	cout << days << " days, " << hours << " hours, " << minutes << " minutes, " << seconds << " seconds.";
	return 0;
} 
